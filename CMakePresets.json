{
  "version": 3,
  "configurePresets": [
    {
      "name": "windows-base",
      "description": "For Visual Studio on Windows",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": {
        "strategy": "set",
        "value": "x64"
      },
      "toolset": {
        "strategy": "set",
        "value": "v143,host=x64"
      },
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_DEBUG": "${sourceDir}/out/dll/windows/x64/debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_RELEASE": "${sourceDir}/out/dll/windows/x64/release",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_RELWITHDEBINFO": "${sourceDir}/out/dll/windows/x64/relwithdebinfo",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY_DEBUG": "${sourceDir}/out/lib/windows/x64/debug",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY_RELEASE": "${sourceDir}/out/lib/windows/x64/release",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY_RELWITHDEBINFO": "${sourceDir}/out/lib/windows/x64/relwithdebinfo"
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "description": "For Visual Studio on Windows x64 (Debug)",
      "inherits": ["windows-base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "description": "For Visual Studio on Windows x64 (Release)",
      "inherits": ["windows-base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "x64-relwithdebinfo",
      "displayName": "x64 RelWithDebInfo",
      "description": "For Visual Studio on Windows x64 (RelWithDebInfo)",
      "inherits": ["windows-base"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "x64-windows-clang",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "x64-windows-clang-debug",
      "description": "Clang-cl on Windows x64 (Debug)",
      "inherits": ["x64-windows-clang"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_DEBUG": "${sourceDir}/out/dll/windows-clang/x64/debug",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY_DEBUG": "${sourceDir}/out/lib/windows-clang/x64/debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "configurePreset": "x64-debug",
      "configuration": "Debug"
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "configurePreset": "x64-release",
      "configuration": "Release"
    },
    {
      "name": "x64-relwithdebinfo",
      "displayName": "x64 RelWithDebInfo",
      "configurePreset": "x64-relwithdebinfo",
      "configuration": "RelWithDebInfo"
    }
  ],
  "testPresets": [
    {
      "name": "x64-debug-test",
      "displayName": "x64 Debug",
      "configurePreset": "x64-debug",
      "configuration": "Debug"
    },
    {
      "name": "x64-release-test",
      "displayName": "x64 Release",
      "configurePreset": "x64-release",
      "configuration": "Release"
    },
    {
      "name": "x64-relwithdebinfo-test",
      "displayName": "x64 RelWithDebInfo",
      "configurePreset": "x64-relwithdebinfo",
      "configuration": "RelWithDebInfo"
    }
  ]
}